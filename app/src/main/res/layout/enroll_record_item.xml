<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/record_num"
        android:text="2"
        android:paddingRight="6dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/record_time"
        android:text="10:00-10:40"
        android:layout_marginRight="66dp"
        android:layout_marginEnd="66dp"
        android:layout_alignTop="@+id/textView"
        android:layout_toLeftOf="@+id/withdrawEnroll"
        android:layout_toStartOf="@+id/withdrawEnroll" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/record_date"
        android:text="02.09.2016"
        android:layout_below="@+id/record_time"
        android:layout_alignLeft="@+id/record_time"
        android:layout_alignStart="@+id/record_time" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/record_status"
        android:text="рассматривается"
        android:layout_alignRight="@+id/withdrawEnroll"
        android:layout_below="@+id/record_pitched"
        android:layout_alignLeft="@+id/record_pitched"
        android:layout_alignStart="@+id/record_pitched" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/record_pitched"
        android:text="01.09.2016"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignLeft="@+id/record_date"
        android:layout_alignStart="@+id/record_date" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Время"
        android:id="@+id/textView"
        android:layout_marginLeft="16dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/record_num"
        android:layout_toEndOf="@+id/record_num" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Подана"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Дата"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Статус"
        android:id="@+id/textView8"
        android:layout_alignTop="@+id/record_status"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/withdraw_book"
        android:id="@+id/withdrawEnroll"

        android:src="@drawable/ic_close_grey600_36dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/withdraw_book"
        android:id="@+id/withdrawProgress"
        android:maxHeight="12dp"
        android:maxWidth="12dp"
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>